<h1 class="page-header">Your Dashboard</h1>

<%- if current_manager.team -%>

  <h4 class="page-sub-header">
    <div class="pull-right">budget: &pound;<%= current_manager.team.budget %>m</div>
    your team: <%= link_to current_manager.team, current_manager.team %>
  </h4>

  <%- if current_manager.team.players.empty? -%>
    <div class="alert alert-warning">
      <strong>Your team needs building. Ready for the auction?</strong>
      Check out the <%= link_to 'player list', players_path, class: 'alert-link' %> for help on planning your auction targets.
    </div>
  <%- end -%>

<%- else -%>

  <div class="alert alert-warning">
    <strong>You don't yet have a team.</strong> Think of a name for your team, then <%= link_to 'create it', new_team_path, class: 'alert-link' %>.
  </div>

<%- end -%>

<div class="row">
  <div class="col-md-6">

    <%- if current_manager.admin? -%>
      <h3 class="page-header">Admin Messages</h3>
      <%- unless @unaproved_managers.empty? -%>
        <p>
          <span class="label label-primary">NEW MANAGERS</span>
          There are <%= link_to "#{@unaproved_managers.count} new managers", managers_path %> waiting to be approved!
        </p>
      <%- end -%>
    <%- end -%>

  </div>
  <div class="col-md-6">

    <h4 class="page-header">League Table</h4>
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>Team</th>
          <th>Points</th>
        </tr>
      </thead>
      <tbody>
        <%- @league.each do |team| -%>
          <tr>
            <td><%= link_to team, team %></td>
            <td>0</td>
          </tr>
        <%- end -%>
      </tbody>
    </table>

  </div>
</div>
