<tr>
  <% grid.html_columns(*options[:columns]).each do |column| %>
    <th class="<%= datagrid_column_classes(grid, column) %>">
      <%= datagrid_order_for(grid, column, options) if column.order && options[:order] %>
      <%= column.header == '-' ? '' : column.header %>
    </th>
  <% end %>
</tr>
