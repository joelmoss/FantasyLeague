<%= content_for :title, 'Conversations' %>
<h1 class="page-header">
  <%= link_to 'Send message...', :new_conversation, class: 'btn btn-default pull-right' %>
  <%= content_for :title %>
</h1>


<ul class="nav nav-tabs" role="tablist">
  <li class="active"><a href="#inbox" role="tab" data-toggle="tab"><strong>Inbox</strong></a></li>
</ul>

<!-- Tab panes -->
<div class="tab-content">
  <div class="tab-pane active" id="inbox">

    <%- if @conversations.empty? -%>
      <p class="alert alert-info"><strong>You have no messages!</strong> <%= link_to 'Send a message', :new_conversation %> now.</p>
    <%- else -%>
      <table class="table table-hover table-striped">
        <thead>
          <tr>
            <th>Subject</th>
            <th>From</th>
            <th>To</th>
            <th>Created</th>
            <th width="10"></th>
          </tr>
        </thead>
        <tbody>
          <%= render @conversations %>
        </tbody>
      </table>
    <%- end -%>

  </div>
</div>


