<%= content_for :title, 'Teams' %>
<h1 class="page-header">
  <div class="pull-right">
    <%= link_to 'Create Team', new_team_path unless current_manager.team %>
  </div>
  <%= content_for :title %>
</h1>

<div class="datatable">
  <table id="teams-list" class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th>Budget</th>
        <th>Formation</th>
        <%- %w( gls ass cs ga ).each do |type| -%>
          <th class="text-right"><%= type.upcase %></th>
        <%- end -%>
        <th class="text-right">Total</th>
      </tr>
    </thead>

    <tbody>
      <%= render @teams %>
    </tbody>
  </table>
</div>

