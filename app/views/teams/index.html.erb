<h1 class="page-header">
  <div class="pull-right">
    <%= link_to 'Create Team', new_team_path unless current_manager.team %>
  </div>
  Teams
</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Manager</th>
      <th width="10"></th>
      <th width="10"></th>
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td><%= link_to team, team %></td>
        <td><%= link_to team.manager, team.manager %></td>
        <td><%= link_to icon('pencil'), [:edit, team]if current_manager.admin? %></td>
        <td><%= link_to icon('times'), team, method: :delete, data: { confirm: 'Are you sure?' } if current_manager.admin? %></td>
      </tr>
    <% end %>
  </tbody>
</table>
