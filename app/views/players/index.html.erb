<h1 class="page-header">Listing Players</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th width="10">Pos</th>
      <th>Name</th>
      <th>Club</th>
      <th width="10"></th>
    </tr>
  </thead>

  <tbody>
    <% @players.each do |player| %>
      <tr>
        <td>
          <div class="label label-info"><%= player.position.upcase %></div>
        </td>
        <td><%= link_to player.short_name, player %></td>
        <td><%= player.club %></td>
      </tr>
    <% end %>
  </tbody>
</table>
