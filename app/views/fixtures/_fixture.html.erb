<tr>
  <td class="text-right"><strong><%= @date == fixture.date ? '~' : @date = fixture.date %></strong></td>
  <td><small><%= @time = fixture.time unless @time == fixture.time %></small></td>
  <td class="text-right"><%= fixture.home_club %></td>
  <td class="text-center">
    <strong><%= link_to "#{fixture.home_score} - #{fixture.away_score}", fixture %></strong>
  </td>
  <td><%= fixture.away_club %></td>
</tr>