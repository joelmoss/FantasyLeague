<%= content_for :title, 'Team Results' %>
<h1 class="page-header"><%= content_for :title %></h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Date</th>
      <th>Matches</th>
    </tr>
  </thead>
  <tbody>
    <%- @fixtures.each do |date,fixtures| -%>
    <tr>
      <td><%= link_to date.to_date.to_s(:full), "/results/teams/#{date.to_date}" %></td>
      <td><%= fixtures.count %></td>
    </tr>
    <%- end -%>
  </tbody>
</table>
