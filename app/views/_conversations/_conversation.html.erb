<tr>
  <td><%= link_to conversation.subject, conversation_path(conversation) %></td>
  <td><small>
    <abbr><%= time_ago_in_words conversation.created_at %> ago</abbr>
  </small></td>
  <td><%= conversation.receipts.first.receiver %></td>
  <td>
    <%- if conversation.is_completely_trashed? current_manager -%>
      <%= link_to 'Untrash', untrash_conversation_path(conversation), method: :post %>
    <%- else -%>
      <%= link_to 'Move to trash', trash_conversation_path(conversation), method: :post %>
    <%- end -%>
  </td>
</tr>